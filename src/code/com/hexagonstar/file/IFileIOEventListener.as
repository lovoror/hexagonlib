om.hexagonstar.file.FileIOEvent	 * @see com.hexagonstar.file.BulkFileIOEvent	 */	public interface IFileIOEventListener	{		/**		 * Event handler that is invoked whenever a file has been opened.		 * 		 * @param e The FileIOEvent broadcasted by the event dispatcher.		 */		function onFileOpen(e:FileIOEvent):void;						/**		 * Event handler that is invoked whenever a file load operation is progressing.		 * 		 * @param e The FileIOEvent broadcasted by the event dispatcher.		 */		function onFileProgress(e:FileIOEvent):void;						/**		 * Event handler that is invoked whenever a file has completed loading. Note that a		 * completed file does not necessarily mean that it was loaded successfully. Every		 * file loaded by one of the file loader classes is signaled as complete after		 * loading, regardless if it could be loaded successfully or not.		 * 		 * @param e The FileIOEvent broadcasted by the event dispatcher.		 */		function onFileComplete(e:FileIOEvent):void;						/**		 * Event handler that is invoked if a file load operation has been aborted.		 * 		 * @param e The FileIOEvent broadcasted by the event dispatcher.		 */		function onFileAbort(e:FileIOEvent):void;						/**		 * Event handler that is invoked whenever a HTTP status is broadcast by a file		 * load operation.		 * 		 * @param e The FileIOEvent broadcasted by the event dispatcher.		 */		function onFileHTTPStatus(e:FileIOEvent):void;						/**		 * Event handler that is invoked if an error occurs during a file load operation.		 * 		 * @param e The FileIOEvent broadcasted by the event dispatcher.		 */		function onFileIOError(e:FileIOEvent):void;						/**		 * Event handler that is invoked if a security error occurs during a file load		 * operation.		 * 		 * @param e The FileIOEvent broadcasted by the event dispatcher.		 */		function onFileSecurityError(e:FileIOEvent):void;						/**		 * Event handler that is invoked after a load operation has completed loading		 * all files.		 * 		 * @param e The FileIOEvent broadcasted by the event dispatcher.		 */		function onAllFilesComplete(e:FileIOEvent):void;	}}